{
  // Best: https://gist.github.com/sindresorhus/a39789f98801d908bbc7ff3ecc99d99c
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "es2020",
    "module": "node16",
    "moduleResolution": "node16",
    "lib": ["es2020", "dom"],
    "noImplicitAny": false,
    "declarationMap": true,
    "isolatedModules": true,
    "outDir": "types",
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "bin",
    "example",
    "types",
    "node_modules",
    "lib"
  ]
}