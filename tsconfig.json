{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "isolatedModules": true,
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
  ],
}