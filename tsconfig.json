{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
  },
  "lib": [
    "es2015"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./lib",
    "./example"
  ]
}